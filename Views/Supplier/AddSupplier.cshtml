
@{
    ViewBag.Title = "AddSupplier";
}


@using MVC_CircloidTemplate.Models

<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Tedarikçi Ekleme
                </div>
                <div class="block-controls">

                    <a href="/Supplier/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <form action="/Supplier/AddSupplier" method="post" role="form">
                    

                        <div class="form-group">
                            <label for="exampleInputPassword1">Kampanya Adı: </label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Tedarikçi adını Giriniz.." name="CompanyName">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1">Adres: </label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Adres Giriniz.." name="Address">
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>


                    </form>
                </div>
            </div>
        </div>
    </div>
</div>




