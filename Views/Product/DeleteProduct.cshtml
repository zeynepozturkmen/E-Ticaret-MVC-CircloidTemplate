
@{
    ViewBag.Title = "DeleteProduct";
}


@using MVC_CircloidTemplate.Models

@model Product 


<div class="row">

    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürün Silme Sayfası
                </div>
                <div class="block-controls">
                    <a href="/Product/Index"><span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span></a>
                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">

                    <form action="/Product/DeleteProduct" method="post" role="form">
                     
                        <div class="form-group">
                            <label>@Model.ProductName ürününü silmek istediğinizden emin misiniz?</label>
                            <input type="hidden" name="ProductID" value="@Model.ProductID"/>
                          
                        </div>

                        <button type="submit" class="btn btn-primary">Evet</button>


                    </form>


                </div>
            </div>
        </div>
    </div>
</div>

